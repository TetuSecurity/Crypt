{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/client/node_modules",
    "node_modules/**",
    "typings",
    "typings/**",
    "src/client/node_modules/**",
    "src/client/typings",
    "src/client/typings/**"
  ],
  "compileOnSave": false
}
