{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "dist",
    "node_modules",
    "src/client/node_modules",
    "node_modules/**",
    "src/client/node_modules/**"
  ],
  "compileOnSave": false
}
